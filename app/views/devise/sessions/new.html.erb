<div class="container page-content">
  <section>
    <div class="row">
      <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
        <div style="margin-left: auto; margin-right: auto; width 16em; margin-top: 20%;">

          <h2>Sign In</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form inputs-underline" }) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>

          <div class="actions">
        <%= f.submit "Sign In", :class => "btn btn-primary btn-rounded" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
<%= render "layouts/footer" %>
