<%= form_for(@space) do |f| %>
<% if @space.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@space.errors.count, "error") %> prohibited this space from being saved:</h2>

  <ul>
    <% @space.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div id="page-content">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li class="active">New Space</li>
    </ol>
    <!--end breadcrumb-->
    <section class="page-title center">
      <h1>Submit A Space</h1>
    </section>
    <!--end page-title-->
    <section>
      <div class="row">
        <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
          <form class="form inputs-underline" enctype="multipart/form-data">
            <section>
              <h3>About</h3>
              <div class="row">
                <div class="col-md-9 col-sm-9">
                  <div class="form-group">
                    <%= f.label :name %><br>
                    <%= f.text_field :name, class: "form-control", placeholder: "Title" %>
                  </div>
                  <!--end form-group-->
                </div>
                <!--end col-md-9-->
                <div class="col-md-3 col-sm-3">
                  <div class="form-group">
                    <label for="category">Category</label>
                    <%= f.select :category_id, Category.all.map { |f| [f.name, f.id] }, class: "form-control" %>
                  </div>
                  <!--end form-group-->
                </div>
                <!--col-md-3-->
              </div>
              <!--end row-->
              <div class="form-group">
                <%= f.label :description %><br>
                <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Describe the Space"%>
              </div>
              <!--end form-group-->
              <div class="form-group">
                <label for="tags">Features</label>
                <%= label_tag 'feature_wifi', 'Wifi' %>
                <%= check_box_tag 'space[feature][]', 'Wifi', checked('Wifi'), id: 'feature_wifi' %>

                <%= label_tag 'feature_parking', 'Parking' %>
                <%= check_box_tag 'space[feature][]', 'Parking', checked('Parking'), id: 'feature_parking' %>

                <%= label_tag 'feature_alcohol', 'Alcohol' %>
                <%= check_box_tag 'space[feature][]', 'Alcohol', checked('Alcohol'), id: 'feature_alcohol' %>

                <%= label_tag 'feature_laptop-friendly', 'Laptop-Friendly' %>
                <%= check_box_tag 'space[feature][]', 'Laptop-Friendly', checked('Laptop-Friendly'), id: 'feature_laptop-friendly' %>

                <%= label_tag 'feature_balcony', 'Balcony' %>
                <%= check_box_tag 'space[feature][]', 'Balcony', checked('Balcony'), id: 'feature_balcony' %>
              </div>
              <!--end form-group-->
            </section>
            <section>
              <h3>Contact</h3>
              <div class="row">
                <div class="col-md-6 col-sm-6">
                  <div class="form-group">

                    <div class="field">
                      <%= f.label :address %><br>
                      <%= f.text_field :address1, class: "form-control", placeholder: "Address" %>
                    </div>
                    <div class="field">
                      <%= f.label :city %><br>
                      <%= f.text_field :city, class: "form-control", placeholder: "City" %>
                    </div>
                    <div class="field">
                      <%= f.label :state %><br>
                      <%= f.text_field :state, class: "form-control", placeholder: "State" %>
                    </div>
                    <div class="field">
                      <%= f.label :zipcode %>
                      <%= f.text_field :zipcode, class: "form-control", placeholder: "Zipcode" %>
                    </div>
                  </div>
                  <!--end form-group-->
                  <!-- <div class="map height-200px shadow" id="map-submit"></div> -->
                  <!--end map-->
                  <!-- <div class="form-group hidden">
                  <input type="text" class="form-control" id="latitude" name="latitude" hidden="">
                  <input type="text" class="form-control" id="longitude" name="longitude" hidden="">
                </div>
                <p class="note">Enter the exact address or drag the map marker to position</p>
              </div> -->
              <!--end col-md-6-->
              <!--end form-group-->
            </div>
            <div class="col-md-6 col-sm-6">
              <div class="form-group">
                <div class="form-group">
                  <%= f.label :phone %><br>
                  <%= f.text_field :phone, class: "form-control", placeholder: "Phone number" %>
                </div>
                <!--end form-group-->
                <div class="form-group">
                  <%= f.label :website %><br>
                  <%= f.text_field :website, class: "form-control", placeholder: "Website" %>
                </div>
                <!--end form-group-->
              </div>
              <!--end col-md-6-->
            </div>
          </section>
          <section>
            <h3>Gallery</h3>

            <%= f.file_field :image, as: :file %>
            <div class="file-upload-previews"></div>
            <div class="file-upload">
              <span>Click or drag images here</span>
            </div>
            <!--end form-group-->
          </section>
          <section>
            <h3>Social</h3>
            <div class="row">
              <div class="col-md-6 col-sm-6">
                <div class="form-group">
                  <label for="facebook">Facebook URL</label>
                  <input type="text" class="form-control" name="facebook" id="facebook" placeholder="http://">
                </div>
                <!--end form-group-->
                <div class="form-group">
                  <label for="youtube">Youtube URL</label>
                  <input type="text" class="form-control" name="youtube" id="youtube" placeholder="http://">
                </div>
                <!--end form-group-->
              </div>
              <!--end col-md-6-->
              <div class="col-md-6 col-sm-6">
                <div class="form-group">
                  <label for="twitter">Twitter URL</label>
                  <input type="text" class="form-control" name="twitter" id="twitter" placeholder="http://">
                </div>
                <!--end form-group-->
                <div class="form-group">
                  <label for="pinterest">Pinterest URL</label>
                  <input type="text" class="form-control" name="pinterest" id="pinterest" placeholder="http://">
                </div>
                <!--end form-group-->
              </div>
              <!--end col-md-6-->
            </div>
            <!--end row-->
          </section>
          <hr>
          <section class="center">
            <div class="form-group">
              <%= f.submit "Submit Space", :class => "btn btn-primary btn-rounded" %>
            </div>
            <!--end form-group-->
          </section>
        </form>
        <!--end form-->
      </div>
      <!--end col-md-6-->
    </div>
    <!--end row-->
  </section>
</div>
<!--end container-->
</div>

<% end %>
