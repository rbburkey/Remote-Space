
<section>
  <div class="row">
    <% @spaces.each do |space| %>
    <div class="col-md-4 col-sm-4">
      <div class="item" data-id="1">
        <a href="<%=space_path(space)%>">
          <div class="description">
            <figure><%=space.phone%></figure>
            <div class="label label-default"><%=space.category.name%></div>
            <h3><%=link_to "#{space.name}", space_path(space)%></h3>
            <h4><%=space.city%>, <%=space.state.upcase%></h4>
          </div>
          <!--end description-->
          <div class="image bg-transfer">
            <%= image_tag space.image%>
          </div>
          <!--end image-->
        </a>
        <div class="additional-info">
          <div class="rating-passive" data-rating="4">
            <span class="stars"></span>
            <span class="reviews">space.avg_rating</span>
          </div>
          <div class="controls-more">
            <ul>
              <li><a href="#">Add to favorites</a></li>
              <li><a href="#">Add to watchlist</a></li>
              <li><a href="#" class="quick-detail">Quick detail</a></li>
            </ul>
          </div>
          <!--end controls-more-->
        </div>
        <!--end additional-info-->
      </div>
      <!--end item-->
    </div>
    <!--<end col-md-3-->
    <%end%>
  </div>
  <!--end row-->
</section>

<section>
  <div class="center">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li class="disabled previous">
          <a href="#" aria-label="Previous">
            <i class="arrow_left"></i>
          </a>
        </li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li class="next">
          <a href="#" aria-label="Next">
            <i class="arrow_right"></i>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</section>
