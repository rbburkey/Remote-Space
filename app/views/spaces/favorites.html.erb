<div id="page-content">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li class="active">My Favorites</li>
    </ol>
    <!--end breadcrumb-->
    <section class="page-title">
      <h1>My Favorites</h1>
    </section>
    <!--end page-title-->
    <section>
      <div class="my-items table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Listings</th>
              <th>Remote Friendly</th>
              <th>Favorites</th>
              <th>Reviews</th>
              <th>Rating</th>
              <th>Last Edited</th>
            </tr>
          </thead>
          <tbody>
            <% @spaces.each do |space| %>
            <tr class="my-item">
              <td>
                <div class="image-wrapper">
                  <%if space.reviews.average(:rating) != nil && space.reviews.average(:rating) > 4 %>
                  <div class="circle" data-toggle="tooltip" data-placement="right" title="Top Listing"><i class="fa fa-thumbs-up"></i></div>
                  <%end%>
                  <div class="image" style="overflow: hidden;">
                    <%= image_tag space.image.url(:small) %>
                  </div>
                </div>
                <div class="info">
                  <h2><%= link_to space.name, space_path(space) %></h2>
                  <figure class="location"><%=space.city%>, <%=space.state%></figure>
                  <figure class="label label-info"><%=space.category.name%></figure>
                  <div class="additional-info">
                    <!-- <span><i class="fa fa-coffee"></i></span> -->
                    <span class="price-info"> <span class="price"></span><span class="appendix"></span></span>
                  </div>
                  <!--end additional-info-->
                </div>
                <!--end info-->
              </td>
              <% if space.reviews.average(:rating) != nil && space.reviews.average(:rating) > 3.8 && space.features["Wifi"] != nil%>
              <td><div class="featured yes"><i class="fa fa-check"></i><aside></aside></div></td>
              <%else%>
              <td></td>
              <% end %>
              <td class="views"><%=space.favorite_spaces.count%></td>
              <td class="reviews"><%=space.reviews.count(:rating)%></td>
              <td class="rating">
                <div class="rating-passive" data-rating="4">
                  <span class="stars"></span>
                  <span class="reviews"><%=space.reviews.average(:rating)%></span>
                </div>
              </td>
              <td class="last-edited"><%=space.updated_at.strftime("%b %d, %Y") + " at " + space.updated_at.strftime("%H:%M")%>
                <span class="last-edit">Last edited: <%=space.updated_at.strftime("%H:%M")%></span>
                <div class="edit-options">
                  <a href="<%=edit_space_path(space)%>" class="link icon"><i class="fa fa-edit"></i>Edit</a>
                  <a href="<%=space_path(space)%>" class="link icon"><i class="fa fa-comment"></i>Reviews</a>
                </div>
                <!--end edit-options-->
              </td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <!--end my-items-->
    </section>
    <section>
      <div class="center">
<%= will_paginate @spaces %>
      </div>
    </section>
  </div>
  <!--end container-->
</div>
