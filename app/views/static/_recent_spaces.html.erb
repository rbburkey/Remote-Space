        </div>
      </div>
      <!--end section-title-->
    </div>
    <!--end center-->

    <div class="row">
      <div class="col-md-4 col-sm-4">
        <div class="item" data-id="1">
          <a href="<%=space_path(@spaces[-1])%>"><%= image_tag @spaces[-1].image.url(:small)%>
            <div class="description">
              <figure></figure>
              <div class="label label-default"><%=@spaces[-1].category.name%></div>
              <h3><%=@spaces[-1].name%></h3>
              <h4><%=@spaces[-1].city%>, <%=@spaces[-1].state%></h4>
            </div>
            <!--end description-->

            <!--end image-->
          </a>
          <div class="additional-info">
            <div class="rating-passive" data-rating=<%=@spaces[-1].reviews.average(:rating)%>>
              <div id="star"></div>
              <% if @spaces[-1].reviews.average(:rating) == nil %>
              <span class="reviews"><%= link_to "Be the first to Review!", @spaces[-2]%></span>
              <%else%>
              <span class="reviews"><%=@spaces[-1].reviews.average(:rating)%></span>
              <span class="star-rating" data-score=<%=@spaces[-1].reviews.average(:rating)%> ></span>
              <%end%>

              <% if current_user == nil%>
              <div class="fav_button" style="float: right;">
                <%= link_to "Favorite", new_user_registration_path, class: "btn btn-primary btn-rounded btn-xs"%>
              </div>
              <% elsif current_user.favorites.include? @spaces[-1]  %>
              <div class="fav_button" style="float: right;">
                <%= link_to "Unfavorite", favorite_space_path(@spaces[-1], type: "unfavorite"), class: "btn btn-primary btn-rounded btn-xs", method: :put %>
              </div>
              <%elsif current_user%>
              <div class="fav_button" style="float: right;">
                <%= link_to "Favorite", favorite_space_path(@spaces[-1], type: "favorite"), class: "btn btn-primary btn-rounded btn-xs", method: :put %>
              </div>
              <% end %>
            </div>

            <!--end controls-more-->
          </div>
