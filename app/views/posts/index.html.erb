<div id="page-content">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li class="active">Posts</li>
    </ol>
    <div class="row">
      <div class="col-md-9 col-sm-9">
        <section class="page-title">
          <h1>Remote Stories</h1>
        </section>
        <!--end section-title-->
        <section>
          <% @posts.each do |post| %>
          <article class="blog-post">
            <header><a href="<%=post_path(post)%>"><h2><%=post.title%></h2></a></header>
            <figure class="meta">
              <a href="#" class="link icon"><i class="fa fa-user"></i><%=post.author%></a>
              <div class="tags">
              </figure>
              <p>
                <%=post.body.truncate_words(30)%>
              </p>
              <a href="<%=post_path(post)%>" class="btn btn-rounded btn-default btn-framed btn-small">Read More</a>
            </article><!-- /.blog-post -->
            <%end%>
          </section>

          <section>
            <div class="center">
              <nav aria-label="Page navigation">
                <ul class="pagination">
                  <%= will_paginate @posts %>
                </ul>
              </nav>
            </div>
          </section>
        </div>
        <!--end col-md-9-->

        <% if Space.all.count > 2 %>
        <%= render 'static/recent_spaces_sidebar' %>
        <%end%>

      </div>
      <!--end row-->
    </div>
    <!--end container-->
  </div>
