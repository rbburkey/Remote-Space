<p id="notice"><%= notice %></p>
<div id="page-content">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li class="active">Remote Stories</li>
    </ol>
    <div class="row">
      <section class="page-title">
        <h1>Remote Stories</h1>
      </section>
      <div class="col-md-6 col-md-offset-3">

        <!--end section-title-->
        <section>
          <% @posts.each do |post| %>
          <div style="margin: auto;
          text-align: center;">
          <a href="<%=post_path(post)%>"><%= image_tag post.image.url(:large)%></a>
        </div>
        <article class="blog-post">
          <br>
          <header><a style="text-align: center;";" href="<%=post_path(post)%>"><h3><%=post.subtitle%></h3></a></header>
          <figure class="meta">
            <a href="#" class="link-icon"><i class="fa fa-user"></i>   <%=post.author%></a>
            <a style="float: right;"href="#" class="link-icon"><i class="fa fa-calendar"></i>   <%=post.created_at.strftime("%b %d, %Y")%></a>
            <!-- <div class="tags">
            <a href="#" class="tag article">Architecture</a>
            <a href="#" class="tag article">Design</a>
            <a href="#" class="tag article">Trend</a>
          </div> -->
        </figure>
        <p>
          <%=post.body.truncate_words(8)%>
        </p>
        <a href="blog-detail.html" class="btn btn-rounded btn-default btn-framed btn-small">Read More</a>
      </article><!-- /.blog-post -->
      <%end%>
    </section>

    <section>
      <div class="center">
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <%= will_paginate @posts %>
          </ul>
        </nav>
      </div>
    </section>
  </div>
</div>
</div>

</div>
