<p id="notice"><%= notice %></p>
<div id="page-content">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li><a href="#">Pages</a></li>
      <li class="active">Contact</li>
    </ol>
    <div class="row">
      <div class="col-md-9 col-sm-9">
        <section class="page-title">
          <h1>Remote Stories</h1>
        </section>
        <!--end section-title-->
        <section>
          <% @posts.each do |post| %>
          <article class="blog-post">
            <a href="blog-detail.html"><img src="assets/img/items/20.jpg" alt=""></a>
            <header><a href="/posts/<%=post.id%>"><h2><%= post.title%></h2></a></header>
            <figure class="meta">
              <a href="#" class="link icon"><i class="fa fa-user"></i><%=post.author%></a>
              <a href="#" class="link icon"><i class="fa fa-calendar"></i><%=post.created_at%></a>
              <!-- <div class="tags">
                <a href="#" class="tag article">Architecture</a>
                <a href="#" class="tag article">Design</a>
                <a href="#" class="tag article">Trend</a>
              </div> -->
            </figure>
            <p>
              <%=post.body%>
            </p>
            <a href="blog-detail.html" class="btn btn-rounded btn-default btn-framed btn-small">Read More</a>
          </article><!-- /.blog-post -->
          <%end%>
          </section>

          <section>
            <div class="center">
              <nav aria-label="Page navigation">
                <ul class="pagination">


                  <%if (@posts.count < 3 || @posts.last == Post.all.first) && @page != 1%>
                  <li class="next">
                    <a href="/posts?page=<%=@page - 1%>" aria-label="Previous">
                      <i class="arrow_left"></i>
                    </a>
                  </li>
                  <li><%= link_to @page - 1, page: @page - 1 %></li>
                  <li class="active"><%= link_to @page, page: @page %></li>

                  <% elsif @posts.count >= 3 && @page != 1  %>
                  <li class="next">
                    <a href="/posts?page=<%=@page - 1%>" aria-label="Previous">
                      <i class="arrow_left"></i>
                    </a>
                  </li>
                  <li><%= link_to @page - 1, page: @page - 1 %></li>
                  <li class="active"><%= link_to @page, page: @page %></li>
                  <li><%= link_to @page + 1, page: @page + 1 %></li>
                  <li class="next">
                    <a href="/posts?page=<%=@page +1%>" aria-label="Next">
                      <i class="arrow_right"></i>
                    </a>
                  </li>

                  <%elsif @posts.count >= 3 && @page == 1 %>
                  <li class="active"><%= link_to @page, page: @page %></li>
                  <li class="next">
                    <a href="/posts?page=<%=@page +1%>" aria-label="Next">
                      <i class="arrow_right"></i>
                    </a>
                  </li>
                </ul>


                  <%end %>
                </ul>
              </nav>
            </div>
          </section>
        </div>


