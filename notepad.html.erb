<section>
  <div class="center">
    <nav aria-label="Page navigation">
      <ul class="pagination">


        <%if (@posts.count < 2 || @posts.last == Post.all.first) && @page != 1%>
        <li class="next">
          <a href="/posts?page=<%=@page - 1%>" aria-label="Previous">
            <i class="arrow_left"></i>
          </a>
        </li>
        <li><%= link_to @page - 1, page: @page - 1 %></li>
        <li class="active"><%= link_to @page, page: @page %></li>

        <% elsif @posts.count >= 2 && @page != 1  %>
        <li class="next">
          <a href="/posts?page=<%=@page - 1%>" aria-label="Previous">
            <i class="arrow_left"></i>
          </a>
        </li>
        <li><%= link_to @page - 1, page: @page - 1 %></li>
        <li class="active"><%= link_to @page, page: @page %></li>
        <li><%= link_to @page + 1, page: @page + 1 %></li>
        <li class="next">
          <a href="/posts?page=<%=@page +1%>" aria-label="Next">
            <i class="arrow_right"></i>
          </a>
        </li>

        <%elsif @posts.count >= 2 && @page == 1 %>
        <li class="active"><%= link_to @page, page: @page %></li>
        <li class="next">
          <a href="/posts?page=<%=@page +1%>" aria-label="Next">
            <i class="arrow_right"></i>
          </a>
        </li>
      </ul>


        <%end %>
      </ul>
    </nav>
  </div>
</section>





